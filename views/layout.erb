<html>
  <title>CMS</title>
  <link href="/stylesheets/cms.css" rel="stylesheet" type="text/css" />
  <link href="/icon/favicon.ico" rel="icon"  />
  <body>
  <% if session[:error] %>
    <p class="error"><%= session.delete(:error) %></p>
  <% end %>
  <% if session[:success] %>
    <p class="success"><%= session.delete(:success) %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
